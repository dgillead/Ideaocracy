<%= form_for (idea) do |f| %>

  <div class="text-center">
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title, required: 'required' %>
    </div>

    <div class="field">
      <%= f.label :summary %><br />
      <%= f.text_area :summary, required: 'required' %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  </div>

<% end %>
